    @Styles.Render("~/bundles/css")

</head>

<body>

    <div class="cabecalho">
        <img id="imgLogo" src="/Image/Logo.jpg" class="imageLogo"/>
    </div>

    <div class="navbar navbar-inverse" role="navigation" width="55%">

        <a class="navbar-brand" href="#">Cirne Sports - Seu esporte é aqui.</a>

        @Html.Action("Resumo","Carrinho")

    </div>


    <div class="row panel">

        <div id="Categorias" class="col-xs-3" style="margin-left:0.5%;">
            @Html.Action("Menu", "Categoria")
        </div>

        <div id="produtos" class="col-xs-8">
            @RenderBody()
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)


</body>
</html>