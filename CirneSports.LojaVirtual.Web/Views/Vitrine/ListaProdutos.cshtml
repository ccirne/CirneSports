@using CirneSports.LojaVirtual.Web.HtmlHelpers

@model CirneSports.LojaVirtual.Web.Models.ProdutosViewModel


@foreach (var p in Model.Produtos)
{
    @Html.Partial("ProdutoDetalhes", p)
}

<div class="btn-group pull-right">
    @Html.PageLinks(Model.Paginacao, x => Url.Action("ListaProdutos", new { categoria = Model.CategoriaAtual, pagina = x}))
</div>
