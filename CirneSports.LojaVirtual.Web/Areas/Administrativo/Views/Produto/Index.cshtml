@model IEnumerable<CirneSports.LojaVirtual.Dominio.Entidade.Produto>

@{
    ViewBag.Title = "Administrativo - Produtos";
    Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div class="alert alert-success" id="mensagem"></div>

<div class="panel panel-default">

    <div class="panel-heading">
        <h3>CirneSports Loja Virtual - Administrativo - Produtos</h3>
    </div>

    <div class="panel-body">

        @Html.ActionLink("Novo Porduto", "NovoProduto", "Produto", new { @class = "btn btn-default" })

        <table class="table table-striped table-condensed table-bordered">

            <thead>

                <tr>
                    <th class="text-right">Id</th>
                    <th>Nome</th>
                    <th class="text-right">Preço</th>
                    <th class="text-center">Excluir</th>
                </tr>

            </thead>

            <tbody>

                @foreach(var item in Model)
                { 
                    <tr id="row-@item.ProdutoId">
                        <th class="text-right">
                            @item.ProdutoId
                        </th>
                        <th>
                            @Html.ActionLink(item.Nome, "Alterar", new {item.ProdutoId })
                        </th>
                        <th class="text-right">
                            @item.Preco.ToString("c")
                        </th>
                        <th class="text-center">
                             @using (Html.BeginForm("Excluir","Produto"))
                             {
                                @Html.Hidden("ProdutoId",item.ProdutoId)
                                <input type="submit" class="btn btn-default btn-xs" value="Excluir"/>
                             }
                        </th>
                    </tr>
                }
            </tbody>
           

        </table>


    </div>

</div>